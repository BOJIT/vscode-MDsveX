{
    "name": "vscode-mdsvex",
    "description": "Language support for MDsveX",
    "private": true,
    "author": "James Bennion-Pedley, pngwn",
    "license": "MIT",
    "version": "1.0.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/BOJIT/vscode-MDsveX"
    },
    "publisher": "BOJIT",
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "markdown",
        "vscode",
        "svelte",
        "MDsveX",
        "MDX"
    ],
    "engines": {
        "vscode": "^1.64.0"
    },
    "activationEvents": [
        "onLanguage:svelte"
    ],
    "icon": "./assets/icon.png",
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "MDsveX",
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./assets/icon.png",
                    "dark": "./assets/icon.png"
                },
                "extensions": [
                    ".svx",
                    ".svelte.md"
                ]
            }
        ],
        "grammars": [
            {
                "language": "MDsveX",
                "scopeName": "text.html.mdsvex",
                "path": "./syntaxes/MDsveX.tmLanguage.json",
                "embeddedLanguages": {
                    "embedded.svelte-style-section": "css",
                    "embedded.svelte-js-section": "javascript",
                    "embedded.svelte-section": "svelte",
                    "embedded.markdown-front-matter": "yaml",
                    "source.svelte": "svelte",
                    "source.js": "javascript",
                    "source.css": "css",
                    "text.html.markdown": "markdown"
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "cd client && npm install && cd .. && npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
    },
    "devDependencies": {
        "@types/mocha": "^5.2.7",
        "@types/node": "^16.11.7",
        "@typescript-eslint/eslint-plugin": "^4.23.0",
        "@typescript-eslint/parser": "^4.23.0",
        "eslint": "^7.26.0",
        "typescript": "^4.5.5"
    }
}
