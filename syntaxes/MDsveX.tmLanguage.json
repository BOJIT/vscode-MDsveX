{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Markdown Svelte",
    "scopeName": "text.html.mdsvex",
    "patterns": [
        {
            "include": "#markdown-front-matter"
        },
        {
            "include": "#markdown-block-code"
        },
        {
            "include": "#markdown-inline-code"
        },
        {
            "include": "#svelte-script-section"
        },
        {
            "include": "#svelte-style-section"
        },
        {
            "include": "#svelte-tag"
        },
        {
            "include": "#svelte-template"
        },
        {
            "include": "#svelte-js-expression"
        },
        {
            "include": "text.html.markdown",
            "comment": "Default syntax match is markdown"
        }
    ],
    "repository": {
        "svelte-script-section": {
            "patterns": [
                {
                    "name": "embedded.svelte-section",
                    "contentName": "embedded.svelte-js-section",
                    "begin": "<script[^>]*>",
                    "end": "<\/script>",
                    "endCaptures": {
                        "0": {
                            "name": "embedded.svelte-section"
                        }
                    },
                    "patterns": [
                        {
                            "include": "source.js"
                        }
                    ]
                }
            ]
        },
        "svelte-style-section": {
            "patterns": [
                {
                    "begin": "<style[^>]*>",
                    "end": "<\/style>",
                    "name": "embedded.svelte-section",
                    "contentName": "embedded.svelte-style-section",
                    "endCaptures": {
                        "0": {
                            "name": "embedded.svelte-section"
                        }
                    },
                    "patterns": [
                        {
                            "include": "source.css"
                        }
                    ]
                }
            ]
        },
        "svelte-tag": {
            "patterns": [
                {
                    "begin": "<(?!\\!)",
                    "end": ">",
                    "name": "embedded.svelte-tag"
                }
            ]
        },
        "svelte-template": {
            "patterns": [
                {
                    "begin": "(?!^#{1,}\\s+?)(?:.*?)(?={[#/])",
                    "end": "(?<=}|$)",
                    "contentName": "embedded.svelte-template"
                }
            ]
        },
        "svelte-js-expression": {
            "patterns": [
                {
                    "begin": "(?!^#{1,}\\s+?)(?:.*?)(?={[^#/])",
                    "end": "(?<=}|$)",
                    "contentName": "embedded.svelte-js-expression"
                }
            ]
        },
        "markdown-inline-code": {
            "patterns": [
                {
                    "match": "`.*?`",
                    "name": "embedded.markdown-inline-code"
                }
            ]
        },
        "markdown-block-code": {
            "patterns": [
                {
                    "begin": "(^|\\G)(\\s*)(`{3,}|~{3,})\\s*(?=([^`]*)?$)",
                    "end": "(^|\\G)(\\2|\\s{0,3})(\\3)\\s*$",
                    "name": "embedded.markdown-block-code"
                }
            ]
        },
        "markdown-front-matter": {
            "patterns": [
                {
                    "name": "embedded.markdown-front-matter",
                    "begin": "\\A(?=(-{3,}))",
                    "end": "(?=(-{3,}))",
                    "endCaptures": {
                        "1": {
                            "name": "embedded.markdown-front-matter"
                        }
                    },
                    "patterns": [
                        {
                            "include": "source.yaml"
                        }
                    ]
                }
            ]
        }
    }
}
